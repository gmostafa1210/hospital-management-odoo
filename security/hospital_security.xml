<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id='hospital_doctors' model='ir.module.category'>
        <field name='name'>ABC Hospital</field>
        <field name='sequence'>10</field>
    </record>

    <record id='group_hospital_doctors_general' model='res.groups'>
        <field name='name'>Genaral Doctors</field>
        <field name='implied_ids' eval='[(4, ref("base.group_user"))]'/>
        <field name='category_id' ref='hospital_management.hospital_doctors'/>
        <field name='users' eval='[(4, ref("base.user_admin"))]'/>
    </record>

    <record id='group_hospital_doctors_management' model='res.groups'>
        <field name='name'>Management Doctors</field>
        <field name='category_id' ref='hospital_management.hospital_doctors'/>
        <field name='implied_ids' eval='[(4, ref("hospital_management.group_hospital_doctors_general"))]'/>
        <field name='users' eval='[(4, ref("base.user_admin"))]'/>
    </record>

</odoo>
